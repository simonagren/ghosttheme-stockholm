{{#author}}
<div class="cover author-cover">
	<div class="avatar-wrap">
		{{#if profile_image}}
			<img src="{{profile_image}}" alt="Author image" class="avatar">
			{{else}}
			<img src="{{asset "images/default-user-image.jpg"}}" alt="Author image" class="avatar">
		{{/if}}
	</div>
	<h3 class="author-name">
		{{name}}
	</h3>
	<div class="meta-info">
			<span class="post-count"><i class="fal fa-pencil"></i><a href="{{url}}">{{plural posts.total empty='No posts' singular='% post' plural='% posts'}}</a></span>
		{{#if location}}
		<span class="loaction"><i class="fal fa-map-marker-alt"></i>{{location}}</span>
		{{/if}}
		{{#if website}}
		<span class="website"><i class="fal fa-globe"></i><a href="{{website}}" targer="_BLANK">{{t "Website"}}</a></span>
		{{/if}}
		{{#if twitter}}
		<span class="twitter"><a href="{{twitter_url}}"><i class="fab fa-twitter"></i> {{twitter}}</a></span>
		{{/if}}
		{{#if facebook}}
		<span class="facebook"><a href="{{facebook_url}}"><i class="fa fa-facebook"></i></a></span>
		{{/if}}
	</div>
	{{#if bio}}
	<div class="bio">{{{bio}}}</div>
	{{/if}}
</div>

