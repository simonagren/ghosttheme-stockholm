/*====================================================
  STRUCTURED POST DATA
====================================================*/

<script type="application/ld+json">
{
  "@context": "http://schema.org",
  "@type": "NewsArticle",
  "mainEntityOfPage": {
    "@type": "WebPage",
    "@id": "{{url}}"
  },
  "headline": "{{{title}}}",
  "image": [
    "{{feature_image}}",
    "{{@blog.cover_image}}"
   ],
  "datePublished": "{{date published_at format="MMMM DD, YYYY"}}",
  "dateModified": "{{date updated_at format="MMMM DD, YYYY"}}",
  "author": {
    "@type": "Contributor",
    "name": "{{#primary_author}}{{name}}{{/primary_author}}"
  },
   "publisher": {
    "@type": "Organization",
    "name": "{{@blog.title}}",
    "logo": {
      "@type": "ImageObject",
      "url": "{{@blog.logo}}"
    }
  },
  "description": "{{excerpt}}"
}
</script>
