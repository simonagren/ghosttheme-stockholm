<!-- start tag cloud widget -->
<div class="widget">
	<h4 class="title">Tags</h4>
	<div class="tag-cloud">
		{{#get "tags" limit="all" filter="slug:-[roundup,machine-learning,django,graph-databases,science-news,cybersecurity,blockchain,aws-api,kanban,codesnippetcorner,statistics,tableau-hacks]" include="count.posts" order="count.posts DESC" }}
			{{#foreach tags}}
				<a href="{{url}}">{{name}}</a>
			{{/foreach}}
		{{/get}}
	</div>
</div>
<!-- end tag cloud widget -->
