{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}
<!-- start site's main content area -->
<section class="content-wrap archive">
	{{> postheader}}
	<div class="container">
		<!-- start post -->
		{{#post}}+

			<div class="intro">
				{{#if feature_image}}
					<div class="featured-media" style="background-image: url({{feature_image}});">
					</div>
				{{/if}}
				<h1>{{{title}}}</h1>
				<p>{{content}}</p>
				{{> repos}}
				<h2>Kanban</h2>
				<p>While a work in progress in itself, our Kanban board is a good way to see what we're working on.</p>
				<div class="dropdown">hackersandslackers.com <i class="far fa-angle-down"></i></div>
				<div style="clear:both"></div>
			</div>
			{{> kanban}}
		{{/post}}
	</div>
	<!-- end main post area -->
</section>
<!-- end site's main content area -->
